## -*- mode: makefile; -*-

CXX_STD = CXX17

PKG_CPPFLAGS = -I.
PKG_CXXFLAGS += -O3 -Wno-ignored-attributes -DNDEBUG -DEIGEN_PERMANENTLY_DISABLE_STUPID_WARNINGS

os    := $(shell uname -s)
ifeq ($(os),Linux)
	PKG_LIBS = $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS)
	PKG_CXXFLAGS += -DEIGEN_USE_BLAS
endif

