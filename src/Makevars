## -*- mode: makefile; -*-

CXX_STD = CXX17

# PKG_CXX17FLAGS = -O3 -DNDEBUG
# CXXFLAGS = -O3 -DNDEBUG
CPPFLAGS = -O3 -DNDEBUG
PKG_CPPFLAGS = -I.
PKG_LIBS = $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS)

os    := $(shell uname -s)
ifeq ($(os),Linux)
	PKG_CXXFLAGS += -DEIGEN_USE_BLAS
endif

.PHONY: all clean

all: $(SHLIB)

clean:
	$(RM) *.o
	$(RM) *.dll
	$(RM) *.so
	$(RM) *.dylib
